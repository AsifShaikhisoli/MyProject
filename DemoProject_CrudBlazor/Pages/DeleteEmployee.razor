@page "/DeleteEmployee/{CurrentId}"
@using DemoProject_CrudBlazor.Data
@inject EmployeeService objEmpService
@inject NavigationManager NavigationManager

<h2>Delete Employee</h2>
<hr />
<h3>Are You Sure You Want to Delete This....?</h3>

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label>EmployeeId :</label>
            <label>@objemp.EmployeeId</label>

        </div>

        <div class="form-group">
            <label>Name :</label>
            <label>@objemp.Name</label>

        </div>
        <div class="form-group">
            <label>Gender :</label>
            <label>@objemp.Gender</label>

        </div>
        <div class="form-group">
            <label>City :</label>
            <label>@objemp.City</label>

        </div>
        <div class="form-group">
            <label>Country :</label>
            <label>@objemp.Country</label>

        </div>

    </div>

</div>
<div class="row">
    <div class="col-md-4">
        <div class=" form-group">
            <input type="button" class="btn btn-danger" @onclick="@Deleteemployee" value="Update" />
            <input type="button" class="btn btn-info" @onclick="@Cancel" value="Cancel" />

        </div>

    </div>

</div>


@code {
    [Parameter]
    public string CurrentId { get; set; }
    Employeeinfo objemp = new Employeeinfo();


    protected override async Task OnInitializedAsync()
    {
        objemp = await Task.Run(() => objEmpService.GetEmployeeById(Convert.ToInt32(CurrentId)));
    }

    private void Deleteemployee()
    {
        objEmpService.DeleteEmployee(objemp);
        NavigationManager.NavigateTo("Employee");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Employee");
    }

}
